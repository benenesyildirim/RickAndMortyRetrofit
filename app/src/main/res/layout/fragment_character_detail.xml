<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterDetailFragment">

    <ImageView
        android:id="@+id/character_detail_image_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/temp_character_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/character_name_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/character_detail_image_iv"
        app:layout_constraintTop_toTopOf="@+id/character_detail_image_iv"
        tools:text="RÄ±ck and Morty" />

    <TextView
        android:id="@+id/character_species_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/character_detail_image_iv"
        app:layout_constraintTop_toBottomOf="@+id/character_name_detail_tv"
        tools:text="Species" />

    <TextView
        android:id="@+id/character_status_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/character_detail_image_iv"
        app:layout_constraintTop_toBottomOf="@+id/character_species_detail_tv"
        tools:text="Status" />

    <TextView
        android:id="@+id/character_gender_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/character_detail_image_iv"
        app:layout_constraintTop_toBottomOf="@+id/character_status_detail_tv"
        tools:text="Gender" />

    <TextView
        android:id="@+id/character_type_detail_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@+id/character_detail_image_iv"
        app:layout_constraintTop_toBottomOf="@+id/character_gender_detail_tv"
        tools:text="Type" />

</androidx.constraintlayout.widget.ConstraintLayout>